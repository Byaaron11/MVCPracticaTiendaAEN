@model List<Genero>

    <div class="dropdown">
  <button class="btn btn-secondary dropdown-toggle" 
  type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" 
  aria-expanded="false">
    Filtrar por géneros
  </button>
  <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
        @foreach (Genero genero in Model)
        {
            <li>
                <a class="dropdown-item" asp-action="Index" asp-controller="Home" asp-route-idgenero="@genero.IdGenero">
                    @genero.Nombre
                </a>
            </li>    
        }
  </ul>
</div>
